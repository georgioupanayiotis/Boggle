<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main" tools:context=".MainActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/time_left"
        android:layout_alignTop="@+id/current_word"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/matrix"
        android:id="@+id/current_word"
        android:gravity="center"
        android:textSize="30sp"
        android:foregroundGravity="center"
        android:textAlignment="center"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="30sp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:id="@+id/score"
        android:layout_toRightOf="@id/current_word"
        android:gravity="right|top"/>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:id="@+id/matrix"
        android:textAlignment="center"
        android:weightSum="4">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:weightSum="4">
                <com.inja.boggle.DiceView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/position_1"
                    android:textSize="40sp"
                    app:diceNumber="1"
                    android:textAlignment="center"
                    android:background="#ffe3e3"
                    android:layout_margin="10dp"
                    android:text="A"/>
                <com.inja.boggle.DiceView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:textSize="40sp"
                    app:diceNumber="2"
                    android:id="@+id/position_2"
                    android:background="#ffe3e3"
                    android:layout_margin="10dp"
                    android:text="B"/>
                <com.inja.boggle.DiceView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:textSize="40sp"
                    app:diceNumber="3"
                    android:id="@+id/position_3"
                    android:background="#ffe3e3"
                    android:layout_margin="10dp"
                    android:text="C"/>
                <com.inja.boggle.DiceView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:textSize="40sp"
                    app:diceNumber="4"
                    android:id="@+id/position_4"
                    android:background="#ffe3e3"
                    android:layout_margin="10dp"
                    android:text="D"/>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:weightSum="4">
                <com.inja.boggle.DiceView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/position_5"
                    app:diceNumber="5"
                    android:background="#ffe3e3"
                    android:layout_margin="10dp"
                    android:textSize="40sp"
                    android:textAlignment="center"

                    android:text="A"/>
                <com.inja.boggle.DiceView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:textSize="40sp"
                    app:diceNumber="6"
                    android:id="@+id/position_6"
                    android:background="#ffe3e3"
                    android:layout_margin="10dp"
                    android:text="B"/>
                <com.inja.boggle.DiceView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:textSize="40sp"
                    app:diceNumber="7"
                    android:id="@+id/position_7"
                    android:background="#ffe3e3"
                    android:layout_margin="10dp"
                    android:text="C"/>
                <com.inja.boggle.DiceView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:textSize="40sp"
                    app:diceNumber="8"
                    android:id="@+id/position_8"
                    android:background="#ffe3e3"
                    android:layout_margin="10dp"
                    android:text="D"/>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:weightSum="4">
                <com.inja.boggle.DiceView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="40sp"
                    app:diceNumber="9"
                    android:textAlignment="center"
                    android:id="@+id/position_9"
                    android:background="#ffe3e3"
                    android:layout_margin="10dp"
                    android:text="A"/>
                <com.inja.boggle.DiceView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:textSize="40sp"
                    app:diceNumber="10"
                    android:id="@+id/position_10"
                    android:background="#ffe3e3"
                    android:layout_margin="10dp"
                    android:text="B"/>
                <com.inja.boggle.DiceView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:textSize="40sp"
                    app:diceNumber="11"
                    android:id="@+id/position_11"
                    android:background="#ffe3e3"
                    android:layout_margin="10dp"
                    android:text="C"/>
                <com.inja.boggle.DiceView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:diceNumber="12"
                    android:textAlignment="center"
                    android:textSize="40sp"
                    android:id="@+id/position_12"
                    android:background="#ffe3e3"
                    android:layout_margin="10dp"
                    android:text="D"/>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:weightSum="4">
                <com.inja.boggle.DiceView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="40sp"
                    app:diceNumber="13"
                    android:textAlignment="center"
                    android:id="@+id/position_13"
                    android:background="#ffe3e3"
                    android:layout_margin="10dp"
                    android:text="A"/>
                <com.inja.boggle.DiceView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:diceNumber="14"
                    android:textAlignment="center"
                    android:textSize="40sp"
                    android:id="@+id/position_14"
                    android:background="#ffe3e3"
                    android:layout_margin="10dp"
                    android:text="B"/>
                <com.inja.boggle.DiceView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:textSize="40sp"
                    app:diceNumber="15"
                    android:id="@+id/position_15"
                    android:background="#ffe3e3"
                    android:layout_margin="10dp"
                    android:text="C"/>
                <com.inja.boggle.DiceView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:textSize="40sp"
                    app:diceNumber="16"
                    android:id="@+id/position_16"
                    android:background="#ffe3e3"
                    android:layout_margin="10dp"
                    android:text="D"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


</RelativeLayout>
